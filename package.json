{
  "name": "@gmazovec/flow-typer",
  "version": "0.1.1",
  "description": "Declarative static and runtime type checking with Flow ",
  "main": "dist/index.js",
  "repository": "https://github.com/gmazovec/flow-typer",
  "author": "Gregor Mazovec <gregor.mazovec@gmail.com>",
  "license": "MIT",
  "keywords": [
    "flow",
    "flow-type",
    "type-checking",
    "runtime-validation"
  ],
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "test": "yarn build && yarn test:type && yarn test:unit",
    "test:type": "flow --show-all-errors",
    "test:unit": "ava test",
    "test:coverage": "yarn build && nyc --reporter=lcov --reporter=html --reporter=text yarn test:unit",
    "build": "flow-remove-types --out-dir dist src && cp src/index.js dist/index.js.flow",
    "clean": "rm -rf dist",
    "postinstall": "npm run build"
  },
  "dependencies": {
    "flow-remove-types": "^1.2.3"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "ava-spec": "^1.1.1",
    "flow-bin": "0.67.1",
    "nyc": "^11.4.1"
  },
  "ava": {
    "require": [
      "flow-remove-types/register"
    ]
  }
}
