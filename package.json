{
  "name": "flow-typer",
  "version": "0.0.0",
  "description": "Declarative static and runtime type checking with Flow ",
  "main": "src/index.js",
  "repository": "https://github.com/gmazovec/flow-typer",
  "author": "Gregor Mazovec <gregor.mazovec@gmail.com>",
  "license": "MIT",
  "keywords": ["flow", "flow-type", "type-checking", "runtime-validation"],
  "engines" : { "node" : ">=6.0.0" },
  "scripts": {
    "test": "flow --show-all-errors && ava test",
    "test:coverage": "nyc --reporter=lcov ava test",
    "build": "flow-remove-types --out-file src/index.js src/index.js.flow",
    "clean": "rm -rf src/index.js",
    "postinstall": "npm run build"
  },
  "dependencies": {
    "flow-remove-types": "^1.2.3"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "ava-spec": "^1.1.1",
    "flow-bin": "0.66.0",
    "nyc": "^11.4.1"
  },
  "ava": {
    "require": [
      "flow-remove-types/register"
    ]
  }
}
